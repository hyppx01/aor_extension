{
  "manifest_version": 3,
  "name": "AI Output Clipper",
  "version": "1.0.0",
  "description": "Save AI-generated content to your GitHub blog with one click",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open AI Output Clipper",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.github.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
